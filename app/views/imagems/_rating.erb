        <%= link_to_remote( "3", {:url => { :controller => "imagems", 
            :action => "rate", :id => @imagem.id, :rating => 3, :evento_id => @evento.id}},
            :class => 'three-stars', :name => '3 stars out of 5') %>
    </li>
    <li>
        <%= link_to_remote( "4", {:url => { :controller => "imagems", 
            :action => "rate", :id => @imagem.id, :rating => 4, :evento_id => @evento.id}},
            :class => 'four-stars', :name => '4 stars out of 5') %>    
    </li>
    <li>
        <%= link_to_remote( "5", {:url => { :controller => "imagems", 
            :action => "rate", :id => @imagem.id, :rating => 5, :evento_id => @evento.id}},
            :class => 'five-stars', :name => '5 stars out of 5') %>
    </li>
</ul>
	</div>