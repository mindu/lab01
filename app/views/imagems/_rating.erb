<div id="star-ratings-block">
<%= number_with_precision(@imagem.rating, 1) %>/5 Stars<br>
<ul class='star-rating'>
    <li class='current-rating' style='width:<%= (@imagem.rating * 30).to_i -%>px;'>
          Currently <%= number_with_precision(@imagem.rating, 1) %>/5 Stars.
        </li>
    <li>
        <%= link_to_remote( "1", {:url => { :controller => "imagems", 
            :action => "rate", :id => @imagem.id, :rating => 1, :evento_id => @evento.id}},
            :class => 'one-star', :name => '1 star out of 5') %>
    </li>
