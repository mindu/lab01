<h1>Alterar Evento</h1>

<% form_for([:admin, @evento]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :data %><br />
    <%= f.date_select :data, :order => [:day, :month, :year] %>
  </p>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao, :rows => 5, :cols => 30 %>
  </p>
  <p>
    <%= f.submit "Alterar" %>
  </p>
<% end %>

