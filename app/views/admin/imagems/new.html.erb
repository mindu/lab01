<h1>Cadastrar Nova Imagem</h1>

<% form_for([@evento, @imagem], :url => admin_evento_imagems_path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :evento %><br />
    <%= f.label @evento.titulo %>
  </p>
  <p>
    <%= f.label 'Imagem' %><br />
    <%= f.file_field :avatar %>
  </p>  
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao, :rows => 5, :cols => 30 %>
  </p>
  <p>
    <%= f.submit "Cadastrar" %>
  </p>
<% end %>

